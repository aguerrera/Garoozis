<html>
<head>
    <link rel="stylesheet" type="text/css" href="/static/site.css" />
    <title>@Model.Title</title>
</head>
<body>
    <div class="page">
        <div class="header">
            <h1>Test.Guerrera.Org</h1>
        </div>
        <div class="content">
            @Model.Content
        </div>
        <div class="pager">
            @if (Model.NextPost != null && Model.NextPost.Title != "")
            {
                <div>Next: <a href="/@Model.NextPost.Url">@Model.NextPost.Title</a></div>
            }
            @if (Model.PrevPost != null && Model.PrevPost.Title != "")
            {
                <div>Prev: <a href="/@Model.PrevPost.Url">@Model.PrevPost.Title</a></div>
            }
        </div>
        <div class="footer">
            <a href="https://github.com/aguerrera/Garoozis">Garoozis: </a>Static HTML, FTW!
        </div>
    </div>
</body>
</html>
